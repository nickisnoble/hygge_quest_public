<div class="grid grid-cols-2">

  <div class="prose w-1/3 prose-emerald">
    <table>
      <thead class="uppercase font-bold text-xs">
        <tr>
          <th>Feast</th>
          <th>Plates</th>
        </tr>
      </thead>
      <tbody>
        <% @attending.group_by(&:food_preference).each do |feast, guests| %>
          <tr>
            <td class="whitespace-nowrap"><%= guests.first.feast %></td>
            <td><%= guests.count %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="prose w-1/3 prose-emerald">
    <table>
      <thead class="uppercase font-bold text-xs">
        <tr>
          <th>Guild</th>
          <th>Allegiance</th>
        </tr>
      </thead>
      <tbody>
        <% @attending.group_by(&:guild).each do |guild, guests| %>
          <tr>
            <td><%= guild&.name %></td>
            <td><%= guests.count %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>



</div>
